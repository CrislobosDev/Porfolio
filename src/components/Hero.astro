<section class="hero" id="hero">
  <div class="hero-text">
    <h3>Hola, Soy</h3>
    <h1>Cristian Villalobos</h1>
    <h3>Desarrollador Web</h3>
    <div class="hero-buttons">
      <button id="botonConSonido"> Descargar CV</button>
      <button> Ver Trabajos</button>
    </div>
  </div>
  <div class="hero-image">
    <img src="/laptophero.webp" alt="Hero Imagen" />
  </div>
  <audio id="audioHover" src="SoundHover.mp3" preload="auto"></audio>
</section>

<style>
  .hero {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
    height: 100vh;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;

    @media (max-width: 768px) {
      align-items: center;
      text-align: center;
    }
  }
  h1 {
    font-size: 4rem;
    color: #eef0e4;
    margin: 0 1rem;
  }
  h3 {
    color: #8ba3c5;
    font-size: 28px;
    margin: 1rem 1rem;
  }

  img {
    width: 100%;
    height: auto;
    max-width: 600px;
  }

  .hero-buttons {
    display: flex;
    flex-direction: column;
    align-items: right;
    justify-content: center;
    margin-top: 80px;
  }

  button {
    font-size: large;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    color: aliceblue;
    background-color: #4064b7;
    width: 12rem;
    height: 2.6rem;
    border-style: none;
    border-radius: 6px;
    margin: 0.5rem;
    transition: ease-in-out 0.1s;
  }

  button:hover {
    background-color: #ffb800;
    color: #000;
    transform: scale(1.05);
  }

  .hero-image {
    @media (max-width: 768px) {
      display: none;
    }
  }
</style>
